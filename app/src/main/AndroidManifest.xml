<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permiso para acceder a Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Upcpre202402cc238EAVenturaChancafeEduardoRenatou202212645"
        tools:targetApi="31">

        <!-- HomeActivity configurada como la actividad principal -->
        <activity
            android:name=".activities.HomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Upcpre202402cc238EAVenturaChancafeEduardoRenatou202212645">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras Activities -->
        <activity
            android:name=".activities.FavoriteNewsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.DetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.FindNewsActivity"
            android:exported="false" />

        <!-- MainActivity sin intent-filter de launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Upcpre202402cc238EAVenturaChancafeEduardoRenatou202212645" />

    </application>

</manifest>
